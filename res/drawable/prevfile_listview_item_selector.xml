<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
	    <!-- the window has lost focus, disable the items -->
    <item 
        android:state_window_focused="false"
        android:drawable="@drawable/grey_gradient_softcorners" />

    <!-- the list items are disabled -->
    <item 
        android:state_enabled="false"
        android:state_focused="true" 
        android:state_pressed="true"
        android:drawable="@drawable/orange_gradient_softcorners" />
    <item 
        android:state_enabled="false"
        android:state_focused="true" 
        android:drawable="@drawable/orange_gradient_softcorners" />
    <item 
        android:state_enabled="false"
        android:drawable="@drawable/orange_gradient_softcorners" />

    <!-- the list items are enabled and being pressed -->
    <item 
        android:state_focused="true" 
        android:state_pressed="true"
        android:drawable="@drawable/orange_gradient_softcorners" />
    <item 
        android:state_focused="false" 
        android:state_pressed="true"
        android:drawable="@drawable/orange_gradient_softcorners" />

    <!-- the list items are enabled and being used -->
    <item
        android:state_focused="true"
        android:drawable="@drawable/orange_gradient_softcorners" />
    <item 
        android:state_pressed="true"
        android:drawable="@drawable/orange_gradient_softcorners" />

    <!-- the default item -->
    <item 
        android:drawable="@drawable/orange_gradient_softcorners" />
</selector>
