<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
	android:visible="true">

	<!-- the list items are disabled -->
	<item android:state_window_focused="false"
		android:drawable="@drawable/grey_gradient_softcorners" />

	<!-- the list items are enabled, in focus but not being touched/pressed 
		(idle) -->
	<item android:state_window_focused="true" android:state_pressed="false"
		android:state_focused="false" android:state_selected="false"
		android:drawable="@drawable/grey_gradient_softcorners" />
		
	<item android:state_selected="true"
		android:drawable="@drawable/orange_gradient_softcorners" />

    <item android:state_focused="true" 
		android:drawable="@drawable/orange_gradient_softcorners" />
		
	<item android:state_pressed="true" 
		android:drawable="@drawable/orange_gradient_softcorners" />
		
	<!-- the catch-all -->
	<item android:drawable="@android:color/transparent" />
</selector>
