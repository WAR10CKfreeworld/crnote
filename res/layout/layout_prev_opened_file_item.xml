<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:padding="6dp"
	android:layout_height="90dp" android:background="@drawable/prevfile_listview_item_bg">
	<ImageView android:id="@+id/prev_file_icon"
		android:layout_width="wrap_content" android:layout_marginRight="6dip"
		android:src="@drawable/prevfileicon" android:paddingRight="5dp"
		android:layout_height="34px" android:layout_gravity="center_vertical"
		android:focusable="false"
		android:paddingLeft="5dp" />
	<TextView android:layout_gravity="center_vertical"
		android:text="PrevFile" android:id="@+id/prevFilenameText"
		android:textSize="20dp" android:layout_height="wrap_content"
		android:lines="1" android:layout_width="fill_parent"
		android:focusable="false"
		android:textColor="@color/text_color" android:textColorHighlight="@color/text_color_selected"
		android:ellipsize="end"></TextView>
</LinearLayout>
