<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<ImageView android:layout_alignParentLeft="true" android:id="@+id/crrowimage"
		android:layout_height="35dp" android:layout_width="wrap_content"
		android:paddingRight="5dp" android:paddingLeft="5dp"/>
		
	<TextView android:text="@+id/crrowtext" android:layout_width="wrap_content"
		android:id="@+id/crrowtext"
		android:layout_toRightOf="@+id/crrowimage"
		android:gravity="center_vertical" android:layout_height="wrap_content"
		android:textSize="20dp" android:layout_alignTop="@+id/crrowimage"
		android:layout_alignBottom="@+id/crrowimage" android:textColor="@color/text_color"
		android:textColorHighlight="@color/text_color_selected"
		/>
		
	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/crbranchitem_next" android:src="@drawable/crnext"
		android:layout_alignTop="@+id/crrowimage"
		android:layout_alignBottom="@+id/crrowimage"
		android:gravity="center_vertical" android:layout_alignParentRight="true" android:paddingRight="5dp"/>
</RelativeLayout>