<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<com.fff.android.widgets.ScrollingTextView android:text="> Root > Branch1" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/cr_branchlevel_text" android:textSize="16dp" android:lines="1"
		android:background="@drawable/current_branch_gradient" android:paddingBottom="3dp" android:textColor="@color/cr_orange_text"
		android:ellipsize="marquee" android:scrollHorizontally="true" />
		
	<ListView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@android:id/list"
		android:scrollbars="vertical" android:smoothScrollbar="true"
		android:layout_above="@+id/linearLayout1" android:layout_below="@+id/cr_branchlevel_text"/>

	<TextView android:id="@+id/cr_tv_filename"
		android:layout_width="fill_parent" android:textSize="12dp" android:lines="1" android:text="---FILENAME--"
		android:layout_marginBottom="0dp" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/textview_filename_gradient" android:textColor="@color/green_filename"/>
</RelativeLayout>
