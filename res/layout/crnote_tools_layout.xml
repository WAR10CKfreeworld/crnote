<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="match_parent" android:orientation="vertical" android:layout_width="fill_parent">
    <TextView android:layout_height="wrap_content" android:text="Encrypt/Decrypt a file with your password." android:id="@+id/encdectext" android:layout_width="match_parent"></TextView>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:orientation="horizontal" android:layout_marginTop="10dp">
        <Button android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/bEncrypt" android:layout_width="fill_parent" android:background="@drawable/button_encrypt" android:layout_marginRight="10dp"></Button>
        <Button android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/bDecrypt" android:layout_width="fill_parent" android:paddingLeft="30dp" android:paddingRight="30dp" android:background="@drawable/button_decrypt"></Button>
    </LinearLayout>
</LinearLayout>
